<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageActivity">

    <ImageButton
        android:id="@+id/processBWImage_Btn"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#FAFAFA"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.691"
        app:srcCompat="@drawable/processblack" />

    <TextView
        android:id="@+id/backgroundColor_imageActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageActivity_homeBtn"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:background="#317173"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/home_white_icon48px" />

    <ImageButton
        android:id="@+id/imageActivity_backBtn"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:background="#317173"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/back_button_white35px" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="Efficient Coding: "
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="Images"
        android:textColor="#A4CFCB"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:fontFamily="@font/avenir"
        android:text="See what the receptive fields generated by your brain look like when viewing different images."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.40" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:fontFamily="@font/avenir"
        android:text="Choose an image to be processed \nor take a new one:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="1.33" />

    <ImageButton
        android:id="@+id/photoGallery_Btn"
        android:layout_width="86dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#FAFAFA"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.35"
        app:srcCompat="@drawable/photogallerybw" />

    <ImageButton
        android:id="@+id/camera_Btn"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:backgroundTint="#FAFAFA"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toEndOf="@+id/photoGallery_Btn"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.35"
        app:srcCompat="@drawable/camera_black90px" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="86dp"
        android:layout_height="55dp"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:text="Take\nPicture"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoGallery_Btn"
        app:layout_constraintVertical_bias="0.0"

        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="542dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:text="Photo\nGallery"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoGallery_Btn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/picPreview"
        android:layout_width="179dp"
        android:layout_height="159dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="132dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/gallery_image_white512px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="87dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Process\nImage"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processBWImage_Btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="87dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="View Closer"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.443" />




</androidx.constraintlayout.widget.ConstraintLayout>