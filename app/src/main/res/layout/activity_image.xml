<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageActivity">

    <ImageButton
        android:id="@+id/processBWImage_Btn"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#FAFAFA"
        android:onClick="onClick"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.47"
        app:srcCompat="@drawable/processblack" />

    <TextView
        android:id="@+id/backgroundColor_imageActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageActivity_homeBtn"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:background="#317173"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/home_white_icon48px" />

    <ImageButton
        android:id="@+id/imageActivity_backBtn"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:background="#317173"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/back_button_white35px" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="Efficient Coding: "
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="Images"
        android:textColor="#A4CFCB"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:fontFamily="@font/avenir"
        android:text="See what the receptive fields generated by your brain look like when viewing different images."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:lineSpacingMultiplier="1.4"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:fontFamily="@font/avenir"
        android:text="Choose an image to be processed \nor take a new one:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:lineSpacingMultiplier="1.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.15" />

    <ImageButton
        android:id="@+id/photoGallery_Btn"
        android:layout_width="86dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="#FAFAFA"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.691"
        app:srcCompat="@drawable/photogallerybw" />

    <ImageButton
        android:id="@+id/camera_Btn"
        android:layout_width="86dp"
        android:layout_height="73dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#FAFAFA"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.691"
        app:srcCompat="@drawable/blackcamera" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:text="Take\nPicture"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoGallery_Btn"
        app:layout_constraintVertical_bias="0.0"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:text="Photo\nGallery"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoGallery_Btn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/picPreview"
        android:layout_width="106dp"
        android:layout_height="71dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.893"
        app:srcCompat="@drawable/neurosensebrainm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="87dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Process\nImage"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processBWImage_Btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="87dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="View Closer"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor_imageActivity"
        app:layout_constraintVertical_bias="0.3" />


</androidx.constraintlayout.widget.ConstraintLayout>